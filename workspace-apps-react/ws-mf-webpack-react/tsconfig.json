{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"] 
}