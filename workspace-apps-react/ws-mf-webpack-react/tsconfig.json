{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "paths": {
            "@Products": ["./projects/products/src/index.ts"],
        }
    },
    
    
    "exclude": ["node_modules", "**/*.spec.ts"] 
}